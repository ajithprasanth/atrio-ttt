<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/ttt_padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/b_0_0"
            style="@style/ttt_cell" />

        <Button
            android:id="@+id/b_0_1"
            style="@style/ttt_cell" />

        <Button
            android:id="@+id/b_0_2"
            style="@style/ttt_cell" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/b_1_0"
            style="@style/ttt_cell" />

        <Button
            android:id="@+id/b_1_1"
            style="@style/ttt_cell" />

        <Button
            android:id="@+id/b_1_2"
            style="@style/ttt_cell" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/b_2_0"
            style="@style/ttt_cell" />

        <Button
            android:id="@+id/b_2_1"
            style="@style/ttt_cell" />

        <Button
            android:id="@+id/b_2_2"
            style="@style/ttt_cell" />
    </LinearLayout>

</LinearLayout>