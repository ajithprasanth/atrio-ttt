<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/ttt_padding"
    android:clickable="true"
    tools:ignore="UselessParent" >

    <LinearLayout
        android:id="@+id/cells_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_0_0"
                style="@style/ttt_cell" />

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_0_1"
                style="@style/ttt_cell" />

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_0_2"
                style="@style/ttt_cell" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_1_0"
                style="@style/ttt_cell" />

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_1_1"
                style="@style/ttt_cell" />

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_1_2"
                style="@style/ttt_cell" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_2_0"
                style="@style/ttt_cell" />

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_2_1"
                style="@style/ttt_cell" />

            <com.trio.triotictactoe.views.GameButton
                android:id="@+id/b_2_2"
                style="@style/ttt_cell" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>